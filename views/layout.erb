<html color-mode="user" lang="en">
  <head>
    <!-- download this locally! -->
    <link rel="stylesheet" href="https://unpkg.com/mvp.css">
    <script src="https://unpkg.com/htmx.org@2.0.4" integrity="sha384-HGfztofotfshcF7+8n44JQL2oJmowVChPTg48S+jvZoztPfvwD79OC/LTtG6dMp+" crossorigin="anonymous"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

    <%
      site        = 'https://drawohara.io'
      title       = '@drawohara'
      description = 'i bite'
      image       = 'https://drawohara.io/media/mick.jpg'

      if @c
        title = (
          @c.get(:og, :title) || @c.get(:title) || @c.id.capitalize
        )

        description = (
          @c.get(:og, :description) || @c.get(:description) || description
        )

        image = (
          @c.get(:og, :image) || @c.get(:image) || image
        )
      end
    %>

    <title><%== title %></title>

    <meta property="og:title"
      content="<%== title %>" />

    <meta property="og:description"
      content="<%== description %>" />

    <meta property="og:image"
      content="<%== image %>" />
  </head>

  <body hx-boost="true">
    <header>
    </header>
    <main>
      <%= yield %>
    </main>
    <footer>
    </footer>
  </body>
</html>
